{
  "name": "@heygrady/hexagonoids-repo",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/heygrady/hexagonoids.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:demo": "turbo run build --filter=@heygrady/tictactoe-demo",
    "clean": "turbo run clean",
    "clean:hard": "turbo run clean --force && find . -name node_modules -type d -prune -exec rm -rf {} +",
    "claude": "yarn dlx @anthropic-ai/claude-code",
    "coverage": "turbo run coverage",
    "coverage:ci": "turbo run coverage --concurrency=2 -- --passWithNoTests --run",
    "demo": "yarn build:demo && yarn workspace @heygrady/tictactoe-demo start",
    "dev": "yarn workspace @heygrady/hexagonoids-app dev:workspace",
    "format": "turbo run format",
    "gemini": "yarn dlx @google/gemini-cli",
    "lint": "turbo run lint",
    "play": "yarn workspace @heygrady/tictactoe-demo play",
    "prepare": "husky",
    "preview": "yarn workspace @heygrady/hexagonoids-app preview",
    "release": "yarn build && changeset publish",
    "test": "turbo run test -- --passWithNoTests --run",
    "test:ci": "turbo run test --concurrency=2 -- --passWithNoTests --run",
    "vercel-build": "./scripts/inject-npm-auth.sh && yarn install && yarn build",
    "version": "changeset version && yarn install"
  },
  "packageManager": "yarn@4.12.0",
  "volta": {
    "node": "24.11.1",
    "npm": "11.6.4",
    "yarn": "4.12.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/config-workspace-scopes": "^20.0.0",
    "@manypkg/cli": "^0.25.1",
    "husky": "^9.1.7",
    "turbo": "^2.6.1",
    "vercel": "^48.12.0"
  }
}
